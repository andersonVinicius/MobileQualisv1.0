<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#346187"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scrollView1"
        android:layout_below="@+id/spinner3"
        android:layout_marginTop="14dp"
        android:text="Estrato :"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="320dp"
        android:layout_height="144dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="133dp"
            android:layout_height="158dp"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/radio_Todo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tableLayout1"
                android:layout_weight="1"
                android:checked="true"
                android:text="Todos"
                android:textSize="13sp"
                tools:ignore="ObsoleteLayoutParam" />


            <RadioButton
                android:id="@+id/radio_A1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A1"
                android:textSize="13sp" />
            
            <RadioButton
                android:id="@+id/radio_A2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="A2"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/radio_B1"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:text="B1"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/radio_B2"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="B2"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/radio_B3"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="B3"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/radio_B4"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="B4"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/radio_B5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B5"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/radio_C"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C"
                android:textSize="13sp" />
        </RadioGroup>
    </ScrollView>

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:background="#303030"
        android:dropDownSelector="#303030"
        android:gravity="center_horizontal"
        android:popupBackground="#303030"
        android:textAlignment="center"
        android:textColor="#303030" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner3"
        android:layout_alignParentTop="true"
        android:text="Área  :"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scrollView1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scrollView1"
        android:layout_alignRight="@+id/scrollView1"
        android:layout_below="@+id/scrollView1"
        android:layout_marginTop="21dp"
        android:src="@android:drawable/ic_menu_search" />

</RelativeLayout>